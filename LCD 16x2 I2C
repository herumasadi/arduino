#include <Wire.h> 
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,20,4);  

void setup()
{
  lcd.init();                      
  lcd.init();
 
  lcd.backlight();
  lcd.setCursor(1,0);
  lcd.print("SMK Salafiyah");
  lcd.setCursor(1,1);
  lcd.print("Pusat Unggulan");
}

void loop()
{
  delay(1000);
  lcd.clear();
  lcd.backlight();
  lcd.setCursor(1,0);
  lcd.print("Halo !");
  lcd.setCursor(1,1);
  lcd.print("Salam Kenal");
  delay(1000);
  lcd.clear();
  lcd.backlight();
  lcd.setCursor(1,0);
  lcd.print("Saya dari");
  lcd.setCursor(1,1);
  lcd.print("SMK Salafiyah");
  delay(1000);
  lcd.clear();
  lcd.backlight();
  lcd.setCursor(1,0);
  lcd.print("Sedang Belajar");
  lcd.setCursor(1,1);
  lcd.print("LCD 16x2");
  

}
 
